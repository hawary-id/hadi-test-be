{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "resolvePackageJsonExports": false,
    "target": "ES2021",
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "incremental": true
  }
}
